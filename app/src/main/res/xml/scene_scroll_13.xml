<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">
    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@+id/start">
        <OnSwipe
            motion:dragDirection="dragUp"
            motion:onTouchUp="stop"
            motion:touchAnchorId="@id/nestedScroll" />
        <KeyFrameSet>
            <KeyAttribute
                motion:framePosition="80"
                motion:motionTarget="@id/tl_toolbar">

                <CustomAttribute
                    motion:attributeName="backgroundColor"
                    motion:customColorValue="@color/teal_200" />
            </KeyAttribute>
            <KeyAttribute
                motion:framePosition="50"
                motion:motionTarget="@id/tl_toolbar">

                <CustomAttribute
                    motion:attributeName="backgroundColor"
                    motion:customColorValue="#00ffffff" />
            </KeyAttribute>
            <KeyAttribute
                android:alpha="1"
                motion:framePosition="80"
                motion:motionTarget="@id/iv_img_bg" />
            <KeyAttribute
                android:alpha="0"
                motion:framePosition="40"
                motion:motionTarget="@id/iv_img" />
        </KeyFrameSet>
    </Transition>
    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@id/tl_toolbar"
            android:layout_width="match_parent"
            android:layout_height="250dp"></Constraint>
        <Constraint
            android:id="@id/tl_toolbar_tv"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:alpha="0"></Constraint>
        <Constraint
            android:id="@id/iv_img"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:alpha="1" />
        <Constraint
            android:id="@id/iv_img_bg"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:alpha="1" />
    </ConstraintSet>
    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@id/tl_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"></Constraint>
        <Constraint
            android:id="@id/tl_toolbar_tv"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:alpha="1"></Constraint>
        <Constraint
            android:id="@id/iv_img"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:alpha="0" />
        <Constraint
            android:id="@id/iv_img_bg"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:alpha="0" />
    </ConstraintSet>
</MotionScene>